{
  "name": "rnrepo",
  "version": "1.0.0",
  "description": "Build system for React Native libraries",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build-xcf": "node --loader ts-node/esm ios-resources/scripts/build-xcframework.mts",
    "include-xcf": "ruby ios-resources/scripts/include-xcframework.rb",
    "npm-build-xcf": "node --loader ts-node/esm ios-resources/scripts/build-xcf-from-npm.mts",
    "upload-xcf": "node --loader ts-node/esm ios-resources/scripts/upload-xcframework.mts",
    "test-ios": "node --loader ts-node/esm ios-resources/scripts/test-ios-app.mts",
    "builder": "bun run packages/builder",
    "scheduler": "bun run packages/scheduler",
    "publisher": "bun run packages/publisher",
    "validate": "bun run packages/config/src/validate.ts",
    "lint-client": "./packages/client/rnrepo-plugin/gradlew -p packages/client/rnrepo-plugin spotlessCheck -q",
    "lint-ts": "eslint . --ext .ts,.tsx --ignore-pattern ios-resources",
    "test-client": "./packages/client/rnrepo-plugin/gradlew -p packages/client/rnrepo-plugin test --info"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@types/node": "^24.0.4",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.46.4"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "zx": "^8.6.0"
  }
}
