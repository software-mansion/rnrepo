{
  "name": "rnrepo",
  "version": "1.0.0",
  "description": "Build system for React Native libraries",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "builder": "bun run packages/builder",
    "scheduler": "bun run packages/scheduler",
    "publisher": "bun run packages/publisher",
    "validate": "bun run packages/config/src/validate.ts",
    "lint-gradle-client": "./packages/gradle-client/rnrepo-plugin/gradlew -p packages/gradle-client/rnrepo-plugin spotlessCheck -q --no-daemon",
    "lint-ts": "eslint . --ext .ts,.tsx",
    "test-gradle-client": "./packages/gradle-client/rnrepo-plugin/gradlew -p packages/gradle-client/rnrepo-plugin test --info --no-daemon"
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@eslint/json": "^0.14.0",
    "@types/node": "^24.0.4",
    "eslint": "^9.39.1",
    "globals": "^16.5.0",
    "jiti": "^2.6.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.46.4"
  },
  "dependencies": {
    "commander": "^13.1.0",
    "zx": "^8.6.0"
  }
}
