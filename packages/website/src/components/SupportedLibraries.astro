---
import libraries from '../data/libraries';
---

<section id="supported-libraries" class="py-24 relative border-b border-rnrGrey-80">
  <div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="text-center mb-16">
      <h2 class="text-3xl md:text-4xl font-medium text-rnrGrey-0 mb-6 leading-tight">
        Supported Libraries
      </h2>
      <p class="text-lg text-rnrGrey-40 leading-relaxed max-w-2xl mx-auto">
        RNRepo currently supports {libraries.length} popular React Native libraries with prebuilt Android artifacts. More libraries are added regularly!
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 mb-12">
      {libraries.slice(0, 12).map((lib) => (
        <div class="bg-surface/40 border border-rnrGrey-80 hover:border-rnrGrey-60 p-4 rounded-sm transition-colors">
          <div class="flex items-start justify-between gap-2">
            <div class="flex-1 min-w-0">
              <a 
                href={`https://www.npmjs.com/package/${lib.name}`}
                target="_blank"
                rel="noopener noreferrer"
                class="font-semibold text-rnrGrey-0 hover:text-brandPink-100 break-words text-sm transition-colors"
              >
                {lib.name}
              </a>
              {lib.description && (
                <p class="text-xs text-rnrGrey-40 mt-1">{lib.description}</p>
              )}
            </div>
            {lib.supportedPlatforms?.map((platform) => (
              <span
                key={platform}
                class="inline-flex items-center px-2 py-1 rounded-sm text-xs font-medium bg-brandGreen-100/10 text-brandGreen-100 whitespace-nowrap flex-shrink-0"
              >
                {platform} âœ“
              </span>
            ))}
          </div>
        </div>
      ))}
    </div>

    <div class="text-center">
      <p class="text-rnrGrey-40 mb-6">
        Want to see all {libraries.length} supported libraries? Check the full list on our{' '}
        <a
          href="https://github.com/software-mansion/rnrepo/blob/main/libraries.json"
          class="text-rnrGrey-0 underline hover:text-rnrGrey-30 transition-colors"
        >
          GitHub repository</a
        >.
      </p>
      <a
        href="https://github.com/software-mansion/rnrepo/issues/new?template=library_support_request.yml"
        class="inline-flex items-center px-6 py-3 bg-brandPink-100 text-rnrGrey-100 font-semibold rounded-sm hover:bg-brandPink-90 transition-colors"
      >
        Request Library Support
      </a>
    </div>
  </div>
</section>
