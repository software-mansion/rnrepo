---
import { ChevronDown } from 'lucide-astro';

interface Props {
  question: string;
  answer: string;
}

const { question, answer } = Astro.props;
---

<details class="faq-item border-b border-rnrGrey-80">
  <summary class="faq-summary">
    <span class="font-medium text-rnrGrey-20">
      {question}
    </span>
    <ChevronDown class="faq-chevron w-5 h-5 text-rnrGrey-50" />
  </summary>
  <p
    class="faq-answer text-rnrGrey-40 text-sm leading-relaxed pr-8 pt-0 pb-4"
    set:html={answer}
  />
</details>

<style>
  .faq-item {
    list-style: none;
  }

  .faq-item summary {
    list-style: none;
  }

  .faq-item summary::-webkit-details-marker {
    display: none;
  }

  .faq-summary {
    display: flex;
    align-items: center;
    justify-content: space-between;
    width: 100%;
    padding: 1rem 0;
    cursor: pointer;
    transition: color 0.2s;
  }

  .faq-summary:hover span {
    color: #38acdd;
  }

  .faq-summary:hover .faq-chevron {
    color: #38acdd;
  }

  .faq-summary:focus {
    outline: none;
  }

  .faq-chevron {
    flex-shrink: 0;
    transition:
      transform 0.2s,
      color 0.2s;
  }

  .faq-item:global([open]) .faq-chevron {
    transform: rotate(180deg);
    color: #38acdd;
  }

  .faq-answer {
    padding-top: 0;
    padding-bottom: 1rem;
    animation: fadeIn 0.3s ease-in-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }
</style>
