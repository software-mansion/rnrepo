{
  "compilerOptions": {
    "module": "esnext",
    "target": "es2020",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true
  },
  "include": [
    "packages/**/*",
    "ios-resources/**/*",
    "post-install-scripts/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/node_modules"
  ]
}
